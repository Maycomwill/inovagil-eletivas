generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classes {
  id                 String               @id @default(cuid())
  nome               String
  professor          String
  serie              String
  alunosMatriculados alunosMatriculados[]
}

model alunosMatriculados {
  id        String @id @default(cuid())
  classesId String @unique
  studentId String @unique

  turma  Classes  @relation(fields: [classesId], references: [id])
  alunoe Students @relation(fields: [studentId], references: [matricula])
}

model Students {
  matricula          String               @id
  dataDeNascimento   String
  nome               String
  serie              String
  curso              String
  alunosMatriculados alunosMatriculados[]
}
